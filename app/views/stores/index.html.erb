<div class="home_container row">
    <div class="col align-self-center">
        <div class="row align-self-center">
            <div class="column has-text-centered">
                <h1>Productos: </h1>
            </div>
        </div>
        <%if @products %>
        <div class="row align-self-center">
            <% @products.each do |c| %>
                <div class="column has-text-centered">
                    <%= link_to "#{c.id} #{c.category} PRECIO: #{c.price}$ CANTIDAD: #{c.weight_volume} #{c.unit_value}", store_path(c)%>
                    <%= button_to "Eliminar", store_path(c), method: :delete, class: "btn btn--light" %>
                    <%= link_to "Editar", edit_store_path(c), class: "btn btn--light" %>
                </div>
            <% end %>
        </div>
        <div class="row align-self-center">
            <div class="column has-text-centered">
                <%=link_to "Crea nuevo producto", new_store_path, class: "button is-rounded is-link" %>
            </div>
            <div class="column has-text-centered">
                <%=link_to "Home", home_path, class: "button is-rounded is-link" %>
            </div>
        </div>
      <%end%>
    </div>
</div>