<%= form_with model: product do |form| %>
        <div class="field is-horizontal">
          <div class="field-label is-medium">
            <%= form.label :Precio , 'Precio:'%>
          </div>
          <%= form.number_field :price, class:"input"%>
        </div>
        <div class="field is-horizontal">
          <div class="field-label is-medium">
            <%= form.label :category, 'CategorÃ­a:' %>
          </div>
          <div class="select is-fullwidth">
            <%= form.select :category, options_for_select(Store.categories.map {|key, value| [key.titleize, Store.categories.key(value)]}, product.category)%>
          </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label is-medium">
                <%= form.label :weight_volume , 'Peso(kg/g)/Volumen(L/cc)'%>
            </div>
            <%= form.number_field :weight_volume, class:"input"%>
        </div>
        <div class="field is-horizontal">
          <div class="field-label is-medium text_left">
            <%= form.label :unit_value, 'Unidad de medida:' %>
          </div>
          <div class="select unit-value">
            <%= form.select :unit_value, options_for_select(Store.unit_values.map {|key, value| [key.titleize, Store.unit_values.key(value)]}, product.unit_value)%>
          </div>
        </div>
        <%= form.submit "Actualizar", class: "button is-rounded is-link"%>
      <% end %>